<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal" 
    tools:context="com.app.imc.QuizFragment$FinishedQuizFragment ">

    <TextView
        android:id="@+id/tAnswerExplanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:text="Completed! you have:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/correctScore"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:background="#539655"
        android:textColor="#FFFFFF"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/correctScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="answers correct"
        android:textAppearance="?android:attr/textAppearanceMedium" />
	
    <Space 
        android:id="@+id/space1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />
    
    <TextView
        android:id="@+id/incorrectScore"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#8A202E"
        android:textColor="#FFFFFF"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incorrectScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="answers incorrect"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/bTryAgain"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:background="#47A9C2"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Try Again" />

</LinearLayout><!-- From: file:/Users/dhilipb/Google%20Drive/AndroidStudio/IMCQuiz/app/src/main/res/layout/fragment_finished.xml -->